	public static int sum(int a, int b, int c, int d) {
		return a + b + c + d;
	}
	public static int largest(int e, int f, int g) {
		if(e > f&&e > g)
			return e;
		if(f > e&&f > g)
			return f;
		if(g > f&&g > e)
			return g;
		return 0;
		
	}
	
