		public static void amountOfMoney(int[] arr) {
			for (int i = 0; i < 10; i++) {
				System.out.println(arr[i]);
			}
		}
		public static void amountOfMoney(int[] arr1, int[] arr2) {
			for (int i = 0; i < 10; i++) {
				System.out.println(arr1[i]);
				System.out.println(arr2[i]);
			}
		}
				
